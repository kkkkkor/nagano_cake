            <h1>新着商品</h1>
           <tbody>
            <!--<tr><td>-->
            <% @items.each do |item| %>
            <%= link_to item_path(item) do %>
            <% if item.image.attached? %>
            <%= image_tag item.image, size: "150x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "150x100" %>
          <% end %></td></tr>
          <% end %>
            <tr><td><%= item.name %></td></tr>
            <tr><td>￥<%= item.price %></td></tr>

          <% end %>


         <tr><td><%= link_to '全ての商品を見る＞',items_path %></td></tr>

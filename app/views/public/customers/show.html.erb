<h3>マイページ</h3>
<strong>登録情報</strong>
<table class="table table-bordered">
  <tbody>




    <tr>
      <th scope="row">氏名</th>
      <td>氏名</td>
      <td><%= @customer.first_name %><%= @customer.last_name%></td>
    </tr>
    <tr>
      <th scope="row">カナ</th>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana%></td>
    </tr>
    <tr>
    <tr>
      <th scope="row">2</th>
      <td>郵便番号</td>
      <td><%= @customer.postal_code%></td>
    </tr>
    <tr>
    <tr>
      <th scope="row">2</th>
      <td>住所</td>
      <td><%= @customer.address%></td>
    </tr>
    <tr>
    <tr>
      <th scope="row">2</th>
      <td>電話番号</td>
      <td><%= @customer.telephone_number%></td>
    </tr>
    <tr>
    <tr>
      <th scope="row">2</th>
      <td>メールアドレス</td>
      <td><%= @customer.email%></td>
    </tr>
  </tbody>
</table>
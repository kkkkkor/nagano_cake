<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-lg-3" style="background-color: orange;">
      <h4>ジャンル検索</h4>
      <% @genres.each do |genre| %>
      <tr>
      <td><%= link_to genre.name %></td>
      </tr>
      <% end %>
    </div>
    <div class="col-lg-9">
    <table class="table table-striped">
      <div class= "row">
        <h3>商品一覧</h3>
      </div>
      <div class= "row">
        <% @items.each do |item| %>

        <%= link_to item_path(item) do %>

        <% if item.image.attached? %>
        <%= image_tag item.image, size: "200x160" %>
      <% else %>
        <%= image_tag 'no_image', size: "200x160" %>
        <% end %>
      <% end %>
      <%= item.name %>
      ￥<%= item.price %>

      <% end %>
      </div>

      </div>
    </table>
  </div>
  </div>

<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
 <%= render "public/shared/error_messages", resource: resource %>
  <th>名前</th>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last_name" %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autocomplete: "first_name" %>
  </div>
  <th>フリガナ</th>
   <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %>
  </div>
  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %>
  </div>
   <p>メールアドレス</p>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
 <th>郵便番号(ハイフンなし)</th>
 <div class="field">
    <%= f.label :postal_code%><br />
    <%= f.text_field :postal_code, autocomplete: "postal_code" %>
  </div>
  <th>住所</th>
   <div class="field">
    <%= f.label :address%><br />
    <%= f.text_field :address, autocomplete: "address" %>
  </div>
  <th>電話番号(ハイフンなし)</th>
  <div class="field">
    <%= f.label :telephone_number%><br />
    <%= f.text_field :telephone_number, autocomplete: "telephone_number" %>
  </div>
  <th>パスワード(６文字以上)</th>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  <th>パスワード(確認用)</th>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<h2>既に登録済みの方</h2>
<%= link_to 'こちら', customer_session_path %>からログインしてください。

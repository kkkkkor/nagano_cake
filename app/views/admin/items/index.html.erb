<div class="col-md-8 offset-md-1">
       <h2>商品一覧</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
                <th></th>
              <div class="form-group">
                <th>商品ID</th>
              </div>
              <div class="form-group">
                <th>商品名</th>
              </div>
              <div class="form-group">
                <th>税抜価格</th>
              </div>
              <div class="form-group">
                <th>ジャンル</th>
              </div>
              <div class="form-group">
                <th colspan="3"></th>
              </div>
              <div class="form-group">
                <th>ステータス</th>
              </div>
            </tr>
    <% @items.each do |item| %>
    <tr>
      <td>
      </td>
    <td>
      <%= item.id %>
    </td>
        <td>
      <%= link_to item.name, admin_item_path(item) %>
        </td>
          <td>
            <%= item.price %>
          </td>
            <td>
              <%= item.genre.name %>
            </td>
              <div class="form-group">
                  <th colspan="3"></th>
              </div>
              <td>
                <% if item.is_active %>
                 販売中
                <% else %>
                販売停止中
                <% end %>
              </td>
       </tr>
      <% end %>
    <%= paginate @items %>
<%= link_to "新規登録", admin_items_new_path %>
</thead>
</table>
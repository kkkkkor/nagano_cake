<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <script src="https://kit.fontawesome.com/eb6f9385ef.js" crossorigin="anonymous"></script>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_signed_in? %>
             <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "ながのcake", root_path, class: "navbar-brand" %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
        <ul class="navbar-nav ml-auto">
          <li>
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %>
        </li>
      <% elsif customer_signed_in? %>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "ながのcake", root_path, class: "navbar-brand" %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
        <ul class="navbar-nav ml-auto">

        <li>
            <%= link_to "admin_items_path", class: "nav-link text-light" do %>
            <i class="fas fa-home"></i>商品一覧
            <% end %>

        <li>
            <%= link_to '会員一覧', admin_customers_path %>
        </li>
        <li>
            <%= link_to '注文履歴一覧', public_orders_index_path %>
        </li>
        <li>
            <%= link_to 'ジャンル一覧',  admin_genres_path %>
        </li>
        <li>
            <%= link_to 'ログアウト', destroy_customer_session_path, method: :delete %>
        </li>
        </nav>
      <% else %>

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <%= link_to "ながのcake", root_path, class: "navbar-brand" %>


      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

      <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
        <ul class="navbar-nav ml-auto">

        <li>
            <%= link_to 'About', homes_about_path %>
        </li>
        <li>
            <%= link_to '商品一覧', public_items_index_path %>
        </li>
        <li>
            <%= link_to '新規登録', new_customer_registration_path %>
        </li>
        <li>
            <%= link_to 'ログイン', customer_session_path %>
       </li>

       <% end %>
    </header>
    </nav>
    <%= yield %>
    </ul>
    </ul>
    </ul>
    </div>
    </div>
    </div>
    </div>
    </div>

  </body>
</html>
